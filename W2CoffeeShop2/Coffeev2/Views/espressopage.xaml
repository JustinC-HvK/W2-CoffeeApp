<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Coffeev2.Views.espressopage"
             Title="Espresso" 
             >

    <NavigationPage.TitleView>
        <Label Text="Espresso" HorizontalTextAlignment="Center"/>
    </NavigationPage.TitleView>

    <StackLayout>
        <Button Text="Cafe Americano $2.50" FontSize="20" BackgroundColor="White" TextColor="Black"
                BorderWidth="1" Padding="0,24,0,24" BorderColor="Black"></Button>
        <Button Text="Cafe Latte $3.00" FontSize="20" BackgroundColor="White" TextColor="Black"
                BorderWidth="1" Padding="0,24,0,24" BorderColor="Black"></Button>
        <Button Text="Cappucino $3.50" FontSize="20" BackgroundColor="White" TextColor="Black"
                BorderWidth="1"  Padding="0,24,0,24" BorderColor="Black"></Button>
    </StackLayout>
</ContentPage>
    